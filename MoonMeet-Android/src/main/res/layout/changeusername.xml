<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/topbar"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="#FFFFFF"
		android:gravity="center_vertical"
		android:orientation="horizontal">
		<ImageView
			android:id="@+id/back"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="14dp"
			android:src="@drawable/ic_arrow_back_white"
			android:scaleType="center" />
		<TextView
			android:id="@+id/topbar_txt"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:padding="8dp"
			android:gravity="center_vertical"
			android:text="Username"
			android:textSize="18sp"
			android:textColor="#193566" />
		<LinearLayout
			android:id="@+id/topbar_space"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:padding="8dp"
			android:orientation="horizontal"
			android:layout_weight="1" />
		<ImageView
			android:id="@+id/apply"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="14dp"
			android:src="@drawable/ic_check_white"
			android:scaleType="center" />
	</LinearLayout>
	<LinearLayout
		android:id="@+id/main"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:padding="8dp"
		android:background="#FFFFFF"
		android:orientation="vertical"
		android:fitsSystemWindows="true">
		<LinearLayout
			android:id="@+id/space1"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:orientation="horizontal" />
		<LinearLayout
			android:id="@+id/editext_holder"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">
			<EditText
				android:id="@+id/username_edittext"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:background="@android:color/transparent"
				android:textSize="16sp"
				android:textColor="#193566"
				android:hint="Your Username"
				android:textColorHint="#607D8B"
				android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890_"
				android:inputType="textFilter" />
			<LinearLayout
				android:id="@+id/divider"
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:padding="8dp"
				android:background="#DADADA"
				android:orientation="horizontal" />
		</LinearLayout>
		<LinearLayout
			android:id="@+id/space2"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:orientation="horizontal" />
		<TextView
			android:id="@+id/check_user_txt"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:text="Check Username"
			android:textSize="14sp"
			android:textColor="#43A047" />
		<LinearLayout
			android:id="@+id/space3"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:orientation="horizontal" />
		<TextView
			android:id="@+id/contact_txt"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:text="You can choose a username on Moon Meet, if you do, other people will be able to find you by this username and contact you without knowing your phone number."
			android:textSize="14sp"
			android:textColor="#607D8B" />
		<LinearLayout
			android:id="@+id/space4"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:orientation="horizontal" />
		<TextView
			android:id="@+id/youcanuse_txt"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:text="You can use a–Z 0–9 and underscores. Minimum Length is 5 characters."
			android:textSize="14sp"
			android:textColor="#607D8B" />
		<TextView
			android:id="@+id/link_title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:text="This link opens a chat with you :"
			android:textSize="14sp"
			android:textColor="#607D8B"
			android:visibility="invisible" />
		<TextView
			android:id="@+id/link_txt"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:text="https://moonmeet.me/"
			android:textSize="14sp"
			android:textColor="#193566"
			android:visibility="invisible" />
	</LinearLayout>
</LinearLayout>
