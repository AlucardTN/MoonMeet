<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/_coordinator"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">
		<LinearLayout
			android:id="@+id/topbar"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="#FFFFFF"
			android:gravity="center_vertical"
			android:orientation="horizontal">
			<ImageView
				android:id="@+id/imageview1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="14dp"
				android:src="@drawable/ic_arrow_back_white"
				android:scaleType="center" />
			<TextView
				android:id="@+id/settings_text"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:padding="14dp"
				android:gravity="center_vertical"
				android:text="Account Viewer"
				android:textSize="18sp"
				android:textColor="#193566" />
			<LinearLayout
				android:id="@+id/linear1"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:padding="8dp"
				android:orientation="horizontal"
				android:layout_weight="1" />
			<ImageView
				android:id="@+id/imageview2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="14dp"
				android:src="@drawable/msg_actions"
				android:scaleType="center" />
		</LinearLayout>
		<androidx.core.widget.NestedScrollView
			android:id="@+id/scroller"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="#FFFFFF"
			android:layout_weight="1"
			android:fillViewport="true">
			<LinearLayout
				android:id="@+id/all_holder"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:padding="8dp"
				android:orientation="vertical">
				<LinearLayout
					android:id="@+id/moon_info_holder"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="4dp"
					android:gravity="center_vertical"
					android:orientation="horizontal">
					<de.hdodenhof.circleimageview.CircleImageView
						android:id="@+id/avatar"
						android:layout_width="60dp"
						android:layout_height="60dp"
						android:layout_marginLeft="5dp"
						android:layout_marginRight="5dp"
						android:src="@drawable/icplaceholder"
						android:layout_gravity="center_horizontal|center_vertical"
						app:civ_border_width="0dp"
						app:civ_border_color="#008DCD"
						app:civ_circle_background_color="#FFFFFF"
						app:civ_border_overlay="true" />
					<LinearLayout
						android:id="@+id/name_state_holder"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:padding="4dp"
						android:orientation="vertical">
						<TextView
							android:id="@+id/name_moon"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:paddingLeft="8dp"
							android:paddingTop="12dp"
							android:paddingRight="8dp"
							android:paddingBottom="2dp"
							android:text="Moon Meet"
							android:textSize="16sp"
							android:textColor="#193566"
							android:alpha="0.9" />
						<TextView
							android:id="@+id/state_moon"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:paddingLeft="8dp"
							android:paddingTop="2dp"
							android:paddingRight="8dp"
							android:paddingBottom="12dp"
							android:text="Status"
							android:textSize="14sp"
							android:textColor="#000000"
							android:alpha="0.6" />
					</LinearLayout>
				</LinearLayout>
				<LinearLayout
					android:id="@+id/divider"
					android:layout_width="match_parent"
					android:layout_height="1dp"
					android:padding="8dp"
					android:background="#DADADA"
					android:orientation="horizontal" />
				<LinearLayout
					android:id="@+id/part1_holder"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:orientation="vertical">
					<TextView
						android:id="@+id/account"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:text="Info"
						android:textSize="14sp"
						android:textColor="#193566" />
					<LinearLayout
						android:id="@+id/number_holder"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:padding="4dp"
						android:gravity="center_vertical"
						android:orientation="vertical">
						<TextView
							android:id="@+id/number"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:paddingLeft="8dp"
							android:paddingTop="1dp"
							android:paddingBottom="1dp"
							android:text="+000"
							android:textSize="16sp"
							android:textColor="#193566" />
						<TextView
							android:id="@+id/number_info"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:paddingLeft="8dp"
							android:paddingTop="1dp"
							android:paddingBottom="1dp"
							android:text="Phone"
							android:textSize="14sp"
							android:textColor="#000000"
							android:alpha="0.6" />
					</LinearLayout>
					<LinearLayout
						android:id="@+id/divider2"
						android:layout_width="match_parent"
						android:layout_height="1dp"
						android:padding="8dp"
						android:background="#DADADA"
						android:orientation="horizontal"
						android:alpha="0.6" />
					<LinearLayout
						android:id="@+id/name_holder"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:padding="4dp"
						android:gravity="center_vertical"
						android:orientation="vertical">
						<TextView
							android:id="@+id/name"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:paddingLeft="8dp"
							android:paddingTop="1dp"
							android:paddingBottom="1dp"
							android:text="\@"
							android:textSize="16sp"
							android:textColor="#193566" />
						<TextView
							android:id="@+id/name_info"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:paddingLeft="8dp"
							android:paddingTop="1dp"
							android:paddingBottom="1dp"
							android:text="Username"
							android:textSize="14sp"
							android:textColor="#000000"
							android:alpha="0.6" />
					</LinearLayout>
					<LinearLayout
						android:id="@+id/divider3"
						android:layout_width="match_parent"
						android:layout_height="1dp"
						android:padding="8dp"
						android:background="#DADADA"
						android:orientation="horizontal"
						android:alpha="0.6" />
					<LinearLayout
						android:id="@+id/bio_holder"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:padding="4dp"
						android:gravity="center_vertical"
						android:orientation="vertical">
						<TextView
							android:id="@+id/bio"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:paddingLeft="8dp"
							android:paddingTop="1dp"
							android:paddingBottom="1dp"
							android:text="Bio Base"
							android:textSize="16sp"
							android:textColor="#193566" />
						<TextView
							android:id="@+id/bio_info"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:paddingLeft="8dp"
							android:paddingTop="1dp"
							android:paddingBottom="1dp"
							android:text="Bio"
							android:textSize="14sp"
							android:textColor="#000000"
							android:alpha="0.6" />
					</LinearLayout>
				</LinearLayout>
				<LinearLayout
					android:id="@+id/divider4"
					android:layout_width="match_parent"
					android:layout_height="1dp"
					android:padding="8dp"
					android:background="#DADADA"
					android:orientation="horizontal" />
				<LinearLayout
					android:id="@+id/nsm_lin"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:gravity="center_horizontal|center_vertical"
					android:orientation="vertical"
					android:layout_gravity="center_horizontal|center_vertical">
					<TextView
						android:id="@+id/textview2"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:paddingLeft="8dp"
						android:paddingTop="8dp"
						android:paddingRight="8dp"
						android:text="No Media, yet."
						android:textSize="20sp"
						android:textStyle="bold"
						android:textColor="#000000"
						android:alpha="0.8" />
					<TextView
						android:id="@+id/textview3"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:text="Start sending media with someone to view here"
						android:textSize="14sp"
						android:textColor="#000000"
						android:alpha="0.6" />
				</LinearLayout>
				<androidx.recyclerview.widget.RecyclerView
					android:id="@+id/shared_rv"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:layout_weight="1"
					android:nestedScrollingEnabled="true" />
			</LinearLayout>
		</androidx.core.widget.NestedScrollView>
	</LinearLayout>
	<com.google.android.material.floatingactionbutton.FloatingActionButton
		android:id="@+id/_fab"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_margin="16dp"
		android:layout_gravity="right|bottom"
		app:srcCompat="@drawable/profile_newmsg"
		app:tint="@color/MoonWhiteColor"
		app:layout_anchor="@id/divider"
		app:layout_anchorGravity="center|right|top"
		android:translationY="-27.0dp" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>
