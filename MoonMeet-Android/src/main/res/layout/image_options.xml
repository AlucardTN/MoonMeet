<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/bg"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:gravity="center_horizontal|center_vertical"
		android:orientation="vertical">
		<LinearLayout
			android:id="@+id/all_holder"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingBottom="18dp"
			android:background="#FFFFFF"
			android:orientation="vertical">
			<TextView
				android:id="@+id/choose_txt"
				android:focusable="false"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="16dp"
				android:text="Choose photo"
				android:textSize="16sp"
				android:textColor="#000000"
				android:alpha="0.8" />
			<LinearLayout
				android:id="@+id/take_linear"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:gravity="center_vertical"
				android:orientation="horizontal">
				<ImageView
					android:id="@+id/take_img"
					android:focusable="false"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="5dp"
					android:src="@drawable/menu_camera"
					android:scaleType="center" />
				<TextView
					android:id="@+id/take_txt"
					android:focusable="false"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="10dp"
					android:padding="8dp"
					android:text="Take photo"
					android:textSize="14sp"
					android:textColor="#000000"
					android:alpha="0.8" />
			</LinearLayout>
			<LinearLayout
				android:id="@+id/upload_linear"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:gravity="center_vertical"
				android:orientation="horizontal">
				<ImageView
					android:id="@+id/upload_img"
					android:focusable="false"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="5dp"
					android:src="@drawable/profile_photos"
					android:scaleType="center" />
				<TextView
					android:id="@+id/upload_txt"
					android:focusable="false"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="10dp"
					android:padding="8dp"
					android:text="Upload from Gallery"
					android:textSize="14sp"
					android:textColor="#000000"
					android:alpha="0.8" />
			</LinearLayout>
			<LinearLayout
				android:id="@+id/remove_linear"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:gravity="center_vertical"
				android:orientation="horizontal">
				<ImageView
					android:id="@+id/remove_img"
					android:focusable="false"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="5dp"
					android:src="@drawable/chats_delete"
					android:scaleType="center" />
				<TextView
					android:id="@+id/remove_txt"
					android:focusable="false"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="10dp"
					android:padding="8dp"
					android:text="Remove photo"
					android:textSize="14sp"
					android:textColor="#E25050" />
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
