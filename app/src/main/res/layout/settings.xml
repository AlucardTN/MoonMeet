<androidx.coordinatorlayout.widget.CoordinatorLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/_coordinator"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">
		<LinearLayout
			android:id="@+id/topbar"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="#FFFFFF"
			android:gravity="center_vertical"
			android:orientation="horizontal">
			<ImageView
				android:id="@+id/back"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="14dp"
				android:src="@drawable/ic_arrow_back_white"
				android:scaleType="center" />
			<TextView
				android:id="@+id/settings_text"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:padding="14dp"
				android:gravity="center_vertical"
				android:text="Settings"
				android:textSize="18sp"
				android:textColor="#193566" />
			<LinearLayout
				android:id="@+id/space_top"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:padding="8dp"
				android:orientation="horizontal"
				android:layout_weight="1" />
			<ImageView
				android:id="@+id/dots"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="14dp"
				android:src="@drawable/msg_actions"
				android:scaleType="center" />
		</LinearLayout>
		<androidx.core.widget.NestedScrollView
			android:id="@+id/scroller"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="#FFFFFF"
			android:fillViewport="true">
			<LinearLayout
				android:id="@+id/main"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:orientation="vertical"
				android:weightSum="1"
				android:fitsSystemWindows="true">
				<LinearLayout
					android:id="@+id/moon_info_holder"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="4dp"
					android:gravity="center_vertical"
					android:orientation="horizontal">
					<de.hdodenhof.circleimageview.CircleImageView
						android:id="@+id/avatar"
						android:layout_width="60dp"
						android:layout_height="60dp"
						android:layout_marginLeft="5dp"
						android:layout_marginRight="5dp"
						android:src="@drawable/icplaceholder"
						android:layout_gravity="center_horizontal|center_vertical"
						app:civ_border_width="0dp"
						app:civ_border_color="#008DCD"
						app:civ_circle_background_color="#FFFFFF"
						app:civ_border_overlay="true" />
					<LinearLayout
						android:id="@+id/name_state_holder"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:padding="4dp"
						android:orientation="vertical">
						<TextView
							android:id="@+id/name_moon"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:paddingLeft="8dp"
							android:paddingTop="12dp"
							android:paddingRight="8dp"
							android:paddingBottom="2dp"
							android:text="Moon Meet"
							android:textSize="16sp"
							android:textColor="#193566"
							android:alpha="0.9" />
						<TextView
							android:id="@+id/state_moon"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:paddingLeft="8dp"
							android:paddingTop="2dp"
							android:paddingRight="8dp"
							android:paddingBottom="12dp"
							android:text="Status"
							android:textSize="14sp"
							android:textColor="#000000"
							android:alpha="0.6" />
					</LinearLayout>
				</LinearLayout>
				<LinearLayout
					android:id="@+id/divider"
					android:layout_width="match_parent"
					android:layout_height="1dp"
					android:padding="8dp"
					android:background="#DADADA"
					android:orientation="horizontal"
					android:alpha="0.6" />
				<LinearLayout
					android:id="@+id/part1_holder"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:orientation="vertical">
					<TextView
						android:id="@+id/account"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:text="Account"
						android:textSize="16sp"
						android:textColor="#193566" />
					<LinearLayout
						android:id="@+id/number_holder"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:padding="4dp"
						android:gravity="center_vertical"
						android:orientation="vertical"
						android:clickable="true"
						android:focusable="true"
						android:foreground="?android:attr/selectableItemBackground">
						<TextView
							android:id="@+id/number"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:paddingLeft="8dp"
							android:paddingTop="1dp"
							android:paddingBottom="1dp"
							android:text="+000"
							android:textSize="16sp"
							android:textColor="#193566" />
						<TextView
							android:id="@+id/number_info"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:paddingLeft="8dp"
							android:paddingTop="1dp"
							android:paddingBottom="1dp"
							android:text="You can't change your phone number at the moment"
							android:textSize="14sp"
							android:textColor="#000000"
							android:alpha="0.6" />
					</LinearLayout>
					<LinearLayout
						android:id="@+id/divider2"
						android:layout_width="match_parent"
						android:layout_height="1dp"
						android:padding="8dp"
						android:background="#DADADA"
						android:orientation="horizontal"
						android:alpha="0.6" />
					<LinearLayout
						android:id="@+id/name_holder"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:padding="4dp"
						android:gravity="center_vertical"
						android:orientation="vertical"
						android:clickable="true"
						android:focusable="true"
						android:foreground="?android:attr/selectableItemBackground">
						<TextView
							android:id="@+id/name"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:paddingLeft="8dp"
							android:paddingTop="1dp"
							android:paddingBottom="1dp"
							android:text="\@"
							android:textSize="16sp"
							android:textColor="#193566" />
						<TextView
							android:id="@+id/name_info"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:paddingLeft="8dp"
							android:paddingTop="1dp"
							android:paddingBottom="1dp"
							android:text="Username"
							android:textSize="14sp"
							android:textColor="#000000"
							android:alpha="0.6" />
					</LinearLayout>
					<LinearLayout
						android:id="@+id/divider3"
						android:layout_width="match_parent"
						android:layout_height="1dp"
						android:padding="8dp"
						android:background="#DADADA"
						android:orientation="horizontal"
						android:alpha="0.6" />
					<LinearLayout
						android:id="@+id/bio_holder"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:padding="4dp"
						android:gravity="center_vertical"
						android:orientation="vertical"
						android:clickable="true"
						android:focusable="true"
						android:foreground="?android:attr/selectableItemBackground">
						<TextView
							android:id="@+id/bio"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:paddingLeft="8dp"
							android:paddingTop="1dp"
							android:paddingBottom="1dp"
							android:text="Bio Base"
							android:textSize="16sp"
							android:textColor="#193566" />
						<TextView
							android:id="@+id/bio_info"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:paddingLeft="8dp"
							android:paddingTop="1dp"
							android:paddingBottom="1dp"
							android:text="Bio"
							android:textSize="14sp"
							android:textColor="#000000"
							android:alpha="0.6" />
					</LinearLayout>
				</LinearLayout>
				<LinearLayout
					android:id="@+id/space_part1_2"
					android:layout_width="match_parent"
					android:layout_height="20dp"
					android:padding="8dp"
					android:background="#FFFFFF"
					android:orientation="horizontal"
					android:alpha="0.6" />
				<LinearLayout
					android:id="@+id/part2_holder"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:orientation="vertical">
					<TextView
						android:id="@+id/settings"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:text="Settings"
						android:textSize="16sp"
						android:textColor="#193566" />
					<LinearLayout
						android:id="@+id/privacy_holder"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:padding="4dp"
						android:gravity="center_vertical"
						android:orientation="horizontal"
						android:clickable="true"
						android:focusable="true"
						android:foreground="?android:attr/selectableItemBackground">
						<ImageView
							android:id="@+id/privacy_icon"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginLeft="2dp"
							android:layout_marginRight="10dp"
							android:src="@drawable/menu_secret"
							android:scaleType="fitCenter"
							android:layout_gravity="center_horizontal|center_vertical" />
						<TextView
							android:id="@+id/privacy_and_security"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:padding="8dp"
							android:text="Privacy and Security"
							android:textSize="16sp"
							android:textColor="#193566" />
					</LinearLayout>
					<LinearLayout
						android:id="@+id/divider4"
						android:layout_width="match_parent"
						android:layout_height="1dp"
						android:padding="8dp"
						android:background="#DADADA"
						android:orientation="horizontal"
						android:alpha="0.6" />
					<LinearLayout
						android:id="@+id/chats_holder"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:padding="4dp"
						android:gravity="center_vertical"
						android:orientation="horizontal"
						android:clickable="true"
						android:focusable="true"
						android:foreground="?android:attr/selectableItemBackground">
						<ImageView
							android:id="@+id/chats_icon"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginLeft="2dp"
							android:layout_marginRight="10dp"
							android:src="@drawable/menu_chats"
							android:scaleType="center"
							android:layout_gravity="center_horizontal|center_vertical" />
						<TextView
							android:id="@+id/chats_settings"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:padding="8dp"
							android:text="Chats Settings"
							android:textSize="16sp"
							android:textColor="#193566" />
					</LinearLayout>
					<LinearLayout
						android:id="@+id/divider5"
						android:layout_width="match_parent"
						android:layout_height="1dp"
						android:padding="8dp"
						android:background="#DADADA"
						android:orientation="horizontal"
						android:alpha="0.6" />
					<LinearLayout
						android:id="@+id/devices_holder"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:padding="4dp"
						android:gravity="center_vertical"
						android:orientation="horizontal"
						android:clickable="true"
						android:focusable="true"
						android:foreground="?android:attr/selectableItemBackground">
						<ImageView
							android:id="@+id/devices_icon"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginLeft="2dp"
							android:layout_marginRight="10dp"
							android:src="@drawable/menu_devices"
							android:scaleType="center"
							android:layout_gravity="center_horizontal|center_vertical" />
						<TextView
							android:id="@+id/devices"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:padding="8dp"
							android:text="Devices"
							android:textSize="16sp"
							android:textColor="#193566" />
					</LinearLayout>
				</LinearLayout>
				<LinearLayout
					android:id="@+id/space_part2_3"
					android:layout_width="match_parent"
					android:layout_height="20dp"
					android:padding="8dp"
					android:background="#FFFFFF"
					android:orientation="horizontal"
					android:alpha="0.6" />
				<LinearLayout
					android:id="@+id/part3_holder"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:orientation="vertical">
					<TextView
						android:id="@+id/help"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:text="Help"
						android:textSize="16sp"
						android:textColor="#193566" />
					<LinearLayout
						android:id="@+id/answered_holder"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:padding="4dp"
						android:gravity="center_vertical"
						android:orientation="horizontal"
						android:visibility="gone"
						android:clickable="true"
						android:focusable="true"
						android:foreground="?android:attr/selectableItemBackground">
						<ImageView
							android:id="@+id/ask_icon"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginLeft="2dp"
							android:layout_marginRight="10dp"
							android:src="@drawable/menu_support2"
							android:scaleType="center" />
						<TextView
							android:id="@+id/answered_questions"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:padding="8dp"
							android:text="Answered Questions"
							android:textSize="16sp"
							android:textColor="#193566" />
					</LinearLayout>
					<LinearLayout
						android:id="@+id/divider6"
						android:layout_width="match_parent"
						android:layout_height="1dp"
						android:padding="8dp"
						android:background="#DADADA"
						android:orientation="horizontal"
						android:alpha="0.6"
						android:visibility="gone" />
					<LinearLayout
						android:id="@+id/faq_holder"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:padding="4dp"
						android:gravity="center_vertical"
						android:orientation="horizontal"
						android:clickable="true"
						android:focusable="true"
						android:foreground="?android:attr/selectableItemBackground">
						<ImageView
							android:id="@+id/faq_icon"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:paddingLeft="2dp"
							android:paddingRight="10dp"
							android:src="@drawable/menu_support"
							android:scaleType="center" />
						<TextView
							android:id="@+id/moonmeet_faq"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:padding="8dp"
							android:text="Moon Meet FAQ"
							android:textSize="16sp"
							android:textColor="#193566" />
					</LinearLayout>
					<LinearLayout
						android:id="@+id/divider7"
						android:layout_width="match_parent"
						android:layout_height="1dp"
						android:padding="8dp"
						android:background="#DADADA"
						android:orientation="horizontal"
						android:alpha="0.6" />
					<LinearLayout
						android:id="@+id/policy_holder"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:padding="4dp"
						android:gravity="center_vertical"
						android:orientation="horizontal"
						android:clickable="true"
						android:focusable="true"
						android:foreground="?android:attr/selectableItemBackground">
						<ImageView
							android:id="@+id/policy_icon"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginLeft="2dp"
							android:layout_marginRight="10dp"
							android:src="@drawable/menu_policy"
							android:scaleType="center" />
						<TextView
							android:id="@+id/privacy_policy"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:padding="8dp"
							android:text="Privacy Policy"
							android:textSize="16sp"
							android:textColor="#193566" />
					</LinearLayout>
				</LinearLayout>
				<LinearLayout
					android:id="@+id/space_bottom"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:orientation="horizontal" />
				<TextView
					android:id="@+id/version"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:gravity="center_horizontal|center_vertical"
					android:text="Moon Meet for Android v3.0.0"
					android:textSize="14sp"
					android:textColor="#193566" />
			</LinearLayout>
		</androidx.core.widget.NestedScrollView>
	</LinearLayout>
	<com.google.android.material.floatingactionbutton.FloatingActionButton
		android:id="@+id/_fab"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_margin="16dp"
		android:layout_gravity="right|bottom"
		app:srcCompat="@drawable/msg_addphoto"
		app:tint="@color/MoonWhiteColor"
		app:layout_anchor="@id/divider"
		app:layout_anchorGravity="center|right|top"
		android:translationY="-29.5dp" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>
