<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/LinearBaseHolder"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="#FFFFFF"
		android:orientation="vertical"
		android:layout_weight="1">
		<LinearLayout
			android:id="@+id/topbar"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="#FFFFFF"
			android:gravity="center_vertical"
			android:orientation="horizontal">
			<ImageView
				android:id="@+id/back"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="14dp"
				android:src="@drawable/ic_arrow_back_white"
				android:scaleType="center" />
			<TextView
				android:id="@+id/announcements_text"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:padding="14dp"
				android:gravity="center_vertical"
				android:text="Image Preview"
				android:textSize="18sp"
				android:textColor="#193566" />
			<LinearLayout
				android:id="@+id/space_top"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:padding="8dp"
				android:orientation="horizontal"
				android:layout_weight="1" />
		</LinearLayout>
		<LinearLayout
			android:id="@+id/divider"
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:padding="8dp"
			android:background="#DADADA"
			android:orientation="horizontal" />
		<LinearLayout
			android:id="@+id/LinearSecondaryHolder"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:orientation="horizontal"
			android:layout_weight="1">
			<ImageView
				android:id="@+id/imagepreview_img"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:src="@drawable/default_image"
				android:scaleType="fitCenter"
				android:rotation="90"
				android:layout_weight="1" />
		</LinearLayout>
		<LinearLayout
			android:id="@+id/choice_linear"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">
			<ImageView
				android:id="@+id/cancel"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="14dp"
				android:src="@drawable/ic_close_white"
				android:scaleType="center" />
			<LinearLayout
				android:id="@+id/space_bottom"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:padding="8dp"
				android:orientation="horizontal"
				android:layout_weight="1" />
			<ImageView
				android:id="@+id/done"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="14dp"
				android:src="@drawable/ic_ab_done"
				android:scaleType="center" />
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
