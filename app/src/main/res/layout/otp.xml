<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/topbar"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="#FFFFFF"
		android:gravity="center_vertical"
		android:orientation="horizontal"
		android:fitsSystemWindows="true">
		<TextView
			android:id="@+id/yourphone"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:padding="14dp"
			android:gravity="center_horizontal|center_vertical"
			android:text="Your Phone"
			android:textSize="16sp"
			android:textColor="#193566" />
		<LinearLayout
			android:id="@+id/space_bar"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:padding="8dp"
			android:orientation="horizontal"
			android:layout_weight="1" />
		<ImageView
			android:id="@+id/done"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="14dp"
			android:src="@drawable/ic_ab_done"
			android:scaleType="fitCenter" />
	</LinearLayout>
	<LinearLayout
		android:id="@+id/main"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="#FFFFFF"
		android:orientation="vertical"
		android:fitsSystemWindows="true">
		<LinearLayout
			android:id="@+id/part1"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:fitsSystemWindows="true">
			<LinearLayout
				android:id="@+id/space_top"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:orientation="horizontal" />
			<LinearLayout
				android:id="@+id/country_holder"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="16dp"
				android:orientation="vertical">
				<TextView
					android:id="@+id/country_text"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="16dp"
					android:text="Invalid Country Code"
					android:textSize="16sp"
					android:textColor="#193566" />
				<LinearLayout
					android:id="@+id/divider_country"
					android:layout_width="match_parent"
					android:layout_height="1dp"
					android:padding="8dp"
					android:background="#DADADA"
					android:orientation="horizontal" />
			</LinearLayout>
			<LinearLayout
				android:id="@+id/space_bottom"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:orientation="horizontal" />
			<LinearLayout
				android:id="@+id/holder"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="16dp"
				android:gravity="center_vertical"
				android:orientation="horizontal">
				<TextView
					android:id="@+id/plus"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:text="+"
					android:textSize="18sp"
					android:textColor="#193566" />
				<LinearLayout
					android:id="@+id/dial_holder"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:gravity="center_vertical"
					android:orientation="vertical">
					<EditText
						android:id="@+id/dial_code"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="16dp"
						android:background="@android:color/transparent"
						android:textSize="16sp"
						android:textColor="#193566"
						android:hint="–––"
						android:textColorHint="#607D8B"
						android:inputType="numberDecimal"
						android:imeOptions="actionNext"
						android:maxLength="4" />
					<LinearLayout
						android:id="@+id/divider_dialcode"
						android:layout_width="match_parent"
						android:layout_height="1dp"
						android:padding="8dp"
						android:background="#DADADA"
						android:orientation="horizontal" />
				</LinearLayout>
				<LinearLayout
					android:id="@+id/number_holder"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:padding="8dp"
					android:orientation="vertical">
					<EditText
						android:id="@+id/number_edittext"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:padding="16dp"
						android:background="@android:color/transparent"
						android:textSize="16sp"
						android:textColor="#193566"
						android:hint="–– ––– –––"
						android:textColorHint="#607D8B"
						android:inputType="phone"
						android:imeOptions="actionDone"
						android:maxLength="14" />
					<LinearLayout
						android:id="@+id/divider_number"
						android:layout_width="match_parent"
						android:layout_height="1dp"
						android:padding="8dp"
						android:background="#DADADA"
						android:orientation="horizontal" />
				</LinearLayout>
			</LinearLayout>
			<TextView
				android:id="@+id/information"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="16dp"
				android:background="@android:color/transparent"
				android:text="Please confirm your country code and enter your phone number."
				android:textSize="14sp"
				android:textColor="#607D8B" />
		</LinearLayout>
		<LinearLayout
			android:id="@+id/part2"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:gravity="center_horizontal"
			android:orientation="vertical"
			android:fitsSystemWindows="true">
			<ImageView
				android:id="@+id/sms"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="16dp"
				android:src="@drawable/sms_code"
				android:scaleType="center" />
			<TextView
				android:id="@+id/enter_code_txt"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:text="Enter Code"
				android:textSize="16sp"
				android:textColor="#193566" />
			<TextView
				android:id="@+id/notice"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:text="We've sent an SMS with an activation code to your phone."
				android:textSize="12sp"
				android:textColor="#607D8B" />
			<TextView
				android:id="@+id/user_phone"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:text="+000 000000"
				android:textSize="12sp"
				android:textColor="#607D8B" />
			<LinearLayout
				android:id="@+id/otp_holder"
				android:layout_width="wrap_content"
				android:layout_height="140dp"
				android:padding="8dp"
				android:gravity="center_horizontal|center_vertical"
				android:orientation="horizontal"
				android:weightSum="1"
				android:layout_gravity="center_horizontal|center_vertical">
				<LinearLayout
					android:id="@+id/first"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="4dp"
					android:orientation="vertical">
					<EditText
						android:id="@+id/first_edittext"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="16dp"
						android:background="@android:color/transparent"
						android:textSize="14sp"
						android:textColor="#193566"
						android:hint="—"
						android:textColorHint="#607D8B"
						android:inputType="numberDecimal"
						android:imeOptions="actionNext"
						android:maxLength="1" />
					<LinearLayout
						android:id="@+id/first_divider"
						android:layout_width="match_parent"
						android:layout_height="1dp"
						android:padding="8dp"
						android:background="#DADADA"
						android:orientation="horizontal" />
				</LinearLayout>
				<LinearLayout
					android:id="@+id/second"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="4dp"
					android:orientation="vertical">
					<EditText
						android:id="@+id/second_edittext"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="16dp"
						android:background="@android:color/transparent"
						android:textSize="14sp"
						android:textColor="#193566"
						android:hint="—"
						android:textColorHint="#607D8B"
						android:inputType="numberDecimal"
						android:imeOptions="actionNext"
						android:maxLength="1" />
					<LinearLayout
						android:id="@+id/second_divider"
						android:layout_width="match_parent"
						android:layout_height="1dp"
						android:padding="8dp"
						android:background="#DADADA"
						android:orientation="horizontal" />
				</LinearLayout>
				<LinearLayout
					android:id="@+id/third"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="4dp"
					android:orientation="vertical">
					<EditText
						android:id="@+id/third_edittext"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="16dp"
						android:background="@android:color/transparent"
						android:textSize="14sp"
						android:textColor="#193566"
						android:hint="—"
						android:textColorHint="#607D8B"
						android:inputType="numberDecimal"
						android:imeOptions="actionNext"
						android:maxLength="1" />
					<LinearLayout
						android:id="@+id/third_divider"
						android:layout_width="match_parent"
						android:layout_height="1dp"
						android:padding="8dp"
						android:background="#DADADA"
						android:orientation="horizontal" />
				</LinearLayout>
				<LinearLayout
					android:id="@+id/forth"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="4dp"
					android:orientation="vertical">
					<EditText
						android:id="@+id/forth_edittext"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="16dp"
						android:background="@android:color/transparent"
						android:textSize="14sp"
						android:textColor="#193566"
						android:hint="—"
						android:textColorHint="#607D8B"
						android:inputType="numberDecimal"
						android:imeOptions="actionNext"
						android:maxLength="1" />
					<LinearLayout
						android:id="@+id/forth_divider"
						android:layout_width="match_parent"
						android:layout_height="1dp"
						android:padding="8dp"
						android:background="#DADADA"
						android:orientation="horizontal" />
				</LinearLayout>
				<LinearLayout
					android:id="@+id/fiver"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="4dp"
					android:orientation="vertical">
					<EditText
						android:id="@+id/fiver_edittext"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="16dp"
						android:background="@android:color/transparent"
						android:textSize="14sp"
						android:textColor="#193566"
						android:hint="—"
						android:textColorHint="#607D8B"
						android:inputType="numberDecimal"
						android:imeOptions="actionNext"
						android:maxLength="1" />
					<LinearLayout
						android:id="@+id/fiver_divider"
						android:layout_width="match_parent"
						android:layout_height="1dp"
						android:padding="8dp"
						android:background="#DADADA"
						android:orientation="horizontal" />
				</LinearLayout>
				<LinearLayout
					android:id="@+id/sixer"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="4dp"
					android:orientation="vertical">
					<EditText
						android:id="@+id/sixer_edittext"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="16dp"
						android:background="@android:color/transparent"
						android:textSize="14sp"
						android:textColor="#193566"
						android:hint="—"
						android:textColorHint="#607D8B"
						android:inputType="numberDecimal"
						android:imeOptions="actionDone"
						android:maxLength="1" />
					<LinearLayout
						android:id="@+id/sixer_divider"
						android:layout_width="match_parent"
						android:layout_height="1dp"
						android:padding="8dp"
						android:background="#DADADA"
						android:orientation="horizontal" />
				</LinearLayout>
			</LinearLayout>
			<TextView
				android:id="@+id/didnt_get"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="16dp"
				android:background="@android:color/transparent"
				android:text="Didn't get the code \?"
				android:textSize="14sp"
				android:textColor="#193566" />
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
