<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/topbar"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="#ECF0F3"
		android:gravity="center_vertical"
		android:orientation="horizontal"
		android:fitsSystemWindows="true"
		android:minHeight="?attr/actionBarSize">
		<ImageView
			android:id="@+id/back"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="14dp"
			android:src="@drawable/ic_arrow_back_white"
			android:scaleType="center" />
		<TextView
			android:id="@+id/topbar_txt"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:padding="14dp"
			android:gravity="center_vertical"
			android:text="Pick an image"
			android:textSize="18sp"
			android:textColor="#193566" />
		<LinearLayout
			android:id="@+id/topbar_space"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:padding="8dp"
			android:orientation="horizontal"
			android:layout_weight="1" />
		<TextView
			android:id="@+id/toolbar_subtitle"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:padding="14dp"
			android:gravity="center_vertical"
			android:text="Main"
			android:textSize="16sp"
			android:textColor="#424242"
			android:alpha="0.8" />
		<ImageView
			android:id="@+id/external_picker_img"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="14dp"
			android:src="@drawable/ic_launch_white"
			android:scaleType="center" />
	</LinearLayout>
	<LinearLayout
		android:id="@+id/linear_back_holder"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="#ECF0F3"
		android:orientation="vertical">
		<LinearLayout
			android:id="@+id/nophtsyet_grid"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:padding="8dp"
			android:background="#ECF0F3"
			android:gravity="center_horizontal|center_vertical"
			android:orientation="vertical"
			android:layout_gravity="center_horizontal|center_vertical"
			android:layout_weight="1">
			<com.google.android.material.textview.MaterialTextView
				android:id="@+id/nophtsyet_full_txt"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingLeft="8dp"
				android:paddingTop="8dp"
				android:paddingRight="8dp"
				android:gravity="center_horizontal|center_vertical"
				android:text="No Photos, This Folder Seems Empty."
				android:textSize="20sp"
				android:textStyle="bold"
				android:textColor="#000000"
				android:alpha="0.8"
				android:layout_gravity="center_horizontal|center_vertical" />
			<com.google.android.material.textview.MaterialTextView
				android:id="@+id/nophtsyet_mini_txt"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:gravity="center_horizontal|center_vertical"
				android:text="Try granting storage permission, or just check other folders"
				android:textSize="14sp"
				android:textColor="#000000"
				android:alpha="0.8"
				android:layout_gravity="center_horizontal|center_vertical" />
		</LinearLayout>
		<LinearLayout
			android:id="@+id/linear_bottom"
			android:layout_width="match_parent"
			android:layout_height="50dp"
			android:background="#193566"
			android:gravity="center_horizontal|center_vertical"
			android:orientation="horizontal">
			<TextView
				android:id="@+id/textview_bottom"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="2dp"
				android:text="TextView"
				android:textSize="14sp"
				android:textColor="#ECF0F3"
				android:singleLine="true" />
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
