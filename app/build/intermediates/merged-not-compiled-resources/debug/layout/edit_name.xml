<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/topbar"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="#ECF0F3"
		android:gravity="center_vertical"
		android:orientation="horizontal">
		<ImageView
			android:id="@+id/back"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="14dp"
			android:src="@drawable/ic_arrow_back_white"
			android:scaleType="fitCenter" />
		<TextView
			android:id="@+id/topbar_txt"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="14dp"
			android:text="Edit Name"
			android:textSize="18sp"
			android:textColor="#193566" />
		<LinearLayout
			android:id="@+id/space_between_top"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:padding="8dp"
			android:orientation="horizontal"
			android:layout_weight="1" />
		<ImageView
			android:id="@+id/done"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="14dp"
			android:src="@drawable/ic_ab_done"
			android:scaleType="center" />
	</LinearLayout>
	<LinearLayout
		android:id="@+id/divider"
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:padding="8dp"
		android:background="#DADADA"
		android:orientation="horizontal" />
	<android.widget.RelativeLayout
		android:id="@+id/holder"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="#ECF0F3"
		android:orientation="vertical"
		android:layout_weight="1">
		<LinearLayout
			android:id="@+id/base"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:padding="8dp"
			android:background="#ECF0F3"
			android:orientation="vertical"
			android:layout_weight="1">
			<LinearLayout
				android:id="@+id/firstname_holder"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:orientation="vertical">
				<EditText
					android:id="@+id/firstname_edittext"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="14dp"
					android:background="@android:color/transparent"
					android:gravity="center_vertical"
					android:textSize="14sp"
					android:textColor="#193566"
					android:hint="First name"
					android:textColorHint="#607D8B" />
				<LinearLayout
					android:id="@+id/firstname_divider"
					android:layout_width="match_parent"
					android:layout_height="1dp"
					android:padding="8dp"
					android:background="#DADADA"
					android:orientation="vertical" />
			</LinearLayout>
			<LinearLayout
				android:id="@+id/space_between"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:orientation="horizontal" />
			<LinearLayout
				android:id="@+id/lastname_holder"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:orientation="vertical">
				<EditText
					android:id="@+id/lastname_edittext"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="14dp"
					android:background="@android:color/transparent"
					android:gravity="center_vertical"
					android:textSize="14sp"
					android:textColor="#193566"
					android:hint="Last name"
					android:textColorHint="#607D8B" />
				<LinearLayout
					android:id="@+id/lastname_divider"
					android:layout_width="match_parent"
					android:layout_height="1dp"
					android:padding="8dp"
					android:background="#DADADA"
					android:orientation="horizontal" />
			</LinearLayout>
		</LinearLayout>
	</android.widget.RelativeLayout>
</LinearLayout>
