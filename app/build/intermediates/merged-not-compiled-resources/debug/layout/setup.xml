<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/topbar"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="#ECF0F3"
		android:gravity="center_vertical"
		android:orientation="horizontal"
		android:fitsSystemWindows="true">
		<TextView
			android:id="@+id/topbar_txt"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:padding="14dp"
			android:gravity="center_horizontal|center_vertical"
			android:text="Your name"
			android:textSize="16sp"
			android:textColor="#193566" />
		<LinearLayout
			android:id="@+id/space"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:padding="8dp"
			android:orientation="horizontal"
			android:layout_weight="1" />
		<ImageView
			android:id="@+id/done"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="16dp"
			android:src="@drawable/ic_ab_done"
			android:scaleType="fitCenter" />
	</LinearLayout>
	<LinearLayout
		android:id="@+id/main"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="#ECF0F3"
		android:orientation="vertical"
		android:fitsSystemWindows="true">
		<TextView
			android:id="@+id/information"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="16dp"
			android:text="Enter your name and add a profile picture."
			android:textSize="12sp"
			android:textColor="#193566" />
		<LinearLayout
			android:id="@+id/all_holder"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:fitsSystemWindows="true">
			<LinearLayout
				android:id="@+id/image_holder"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:padding="16dp"
				android:gravity="center_vertical"
				android:orientation="vertical">
				<LinearLayout
					android:id="@+id/avatar_holder"
					android:layout_width="80dp"
					android:layout_height="80dp"
					android:gravity="center_horizontal|center_vertical"
					android:orientation="vertical">
					<de.hdodenhof.circleimageview.CircleImageView
						android:id="@+id/avatar"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:src="@drawable/actions_setphoto"
						app:civ_border_width="0dp"
						app:civ_border_color="#008DCD"
						app:civ_circle_background_color="#193566"
						app:civ_border_overlay="true" />
				</LinearLayout>
			</LinearLayout>
			<LinearLayout
				android:id="@+id/all_edittext_holder"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical">
				<LinearLayout
					android:id="@+id/firstname_holder"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:gravity="center_vertical"
					android:orientation="vertical">
					<EditText
						android:id="@+id/firstname_edittext"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:padding="14dp"
						android:background="@android:color/transparent"
						android:textSize="14sp"
						android:textColor="#193566"
						android:hint="First name"
						android:textColorHint="#607D8B"
						android:lines="1"
						android:imeOptions="actionNext" />
					<LinearLayout
						android:id="@+id/divider_first"
						android:layout_width="match_parent"
						android:layout_height="1dp"
						android:padding="8dp"
						android:background="#DADADA"
						android:orientation="horizontal" />
				</LinearLayout>
				<LinearLayout
					android:id="@+id/lastname_holder"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:gravity="center_vertical"
					android:orientation="vertical">
					<EditText
						android:id="@+id/lastname_edittext"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:padding="14dp"
						android:background="@android:color/transparent"
						android:textSize="14sp"
						android:textColor="#193566"
						android:hint="Last name"
						android:textColorHint="#607D8B"
						android:lines="1"
						android:imeOptions="actionDone" />
					<LinearLayout
						android:id="@+id/divider_last"
						android:layout_width="match_parent"
						android:layout_height="1dp"
						android:padding="8dp"
						android:background="#DADADA"
						android:orientation="horizontal" />
				</LinearLayout>
			</LinearLayout>
		</LinearLayout>
		<LinearLayout
			android:id="@+id/width_linear"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:gravity="center_horizontal|center_vertical"
			android:orientation="horizontal"
			android:layout_weight="1"
			android:fitsSystemWindows="true">
			<ImageView
				android:id="@+id/imageview2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/image_15"
				android:scaleType="center"
				android:visibility="invisible" />
			<ImageView
				android:id="@+id/imageview1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/ic_shutter"
				android:scaleType="center" />
		</LinearLayout>
		<LinearLayout
			android:id="@+id/bottom_linear"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:gravity="center_vertical"
			android:orientation="horizontal"
			android:fitsSystemWindows="true">
			<TextView
				android:id="@+id/btm_txt1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingLeft="8dp"
				android:paddingTop="8dp"
				android:paddingBottom="8dp"
				android:text="By signing up,\nYou agree to the"
				android:textSize="14sp"
				android:textColor="#607D8B" />
			<TextView
				android:id="@+id/btm_txt2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingLeft="4dp"
				android:paddingTop="8dp"
				android:paddingRight="8dp"
				android:paddingBottom="8dp"
				android:text="Terms of Service."
				android:textSize="14sp"
				android:textColor="#193566"
				android:layout_gravity="bottom" />
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
