<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/bg"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:padding="8dp"
		android:background="#ECF0F3"
		android:orientation="vertical"
		android:layout_weight="1">
		<LinearLayout
			android:id="@+id/background"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center_vertical"
			android:orientation="horizontal"
			android:animateLayoutChanges="true">
			<LinearLayout
				android:id="@+id/corner"
				android:layout_width="16dp"
				android:layout_height="match_parent"
				android:padding="8dp"
				android:orientation="vertical" />
			<LinearLayout
				android:id="@+id/in_message_holder"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:background="#ECF0F3"
				android:orientation="vertical">
				<LinearLayout
					android:id="@+id/second_all_in_message_holder"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:paddingLeft="8dp"
					android:paddingRight="8dp"
					android:gravity="center_vertical"
					android:orientation="vertical">
					<LinearLayout
						android:id="@+id/reply_top"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:paddingLeft="8dp"
						android:paddingTop="8dp"
						android:paddingRight="8dp"
						android:orientation="horizontal">
						<LinearLayout
							android:id="@+id/reply_in_top_divider"
							android:layout_width="3dp"
							android:layout_height="match_parent"
							android:padding="8dp"
							android:background="#E91E63"
							android:orientation="vertical"
							android:alpha="0.8" />
						<LinearLayout
							android:id="@+id/small_in_reply"
							android:layout_width="match_parent"
							android:layout_height="match_parent"
							android:orientation="vertical">
							<TextView
								android:id="@+id/reply_name"
								android:focusable="false"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:paddingLeft="8dp"
								android:paddingRight="8dp"
								android:text="Name"
								android:textSize="14sp"
								android:textStyle="bold"
								android:textColor="#E91E63"
								android:lines="1" />
							<LinearLayout
								android:id="@+id/message_holder_reply"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:gravity="center_vertical"
								android:orientation="horizontal"
								android:weightSum="1"
								android:layout_weight="1">
								<ImageView
									android:id="@+id/reply_img"
									android:focusable="false"
									android:layout_width="35dp"
									android:layout_height="35dp"
									android:layout_marginLeft="8dp"
									android:layout_marginRight="8dp"
									android:padding="1dp"
									android:src="@drawable/icplaceholder"
									android:scaleType="centerInside"
									android:layout_gravity="center_vertical" />
								<org.mark.axemojiview.view.AXEmojiTextView
									android:id="@+id/reply_message"
									android:focusable="false"
									android:layout_width="wrap_content"
									android:layout_height="match_parent"
									android:paddingLeft="8dp"
									android:paddingRight="8dp"
									android:gravity="center_vertical"
									android:text="Message"
									android:textSize="14sp"
									android:textColor="#000000"
									android:lines="1"
									android:alpha="0.8" />
							</LinearLayout>
						</LinearLayout>
					</LinearLayout>
					<LinearLayout
						android:id="@+id/message_down"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:gravity="center_vertical"
						android:orientation="horizontal">
						<TextView
							android:id="@+id/time2"
							android:focusable="false"
							android:layout_width="wrap_content"
							android:layout_height="match_parent"
							android:gravity="bottom"
							android:text="Time"
							android:textSize="10sp"
							android:textColor="#000000"
							android:lines="1"
							android:alpha="0.6" />
						<com.aghajari.emojiview.view.AXEmojiTextView
							android:id="@+id/message"
							android:focusable="false"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:padding="8dp"
							android:text="Hi there what's up!"
							android:textSize="16sp"
							android:textColor="#000000"
							android:alpha="0.85" />
						<TextView
							android:id="@+id/time"
							android:focusable="false"
							android:layout_width="wrap_content"
							android:layout_height="match_parent"
							android:gravity="bottom"
							android:text="Time"
							android:textSize="10sp"
							android:textColor="#000000"
							android:lines="1"
							android:alpha="0.6"
							android:layout_gravity="bottom" />
					</LinearLayout>
				</LinearLayout>
			</LinearLayout>
			<LinearLayout
				android:id="@+id/corner2"
				android:layout_width="16dp"
				android:layout_height="match_parent"
				android:padding="8dp"
				android:orientation="vertical" />
		</LinearLayout>
		<ImageView
			android:id="@+id/love"
			android:focusable="false"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:src="@drawable/ic_favorite_grey"
			android:scaleType="fitCenter" />
		<androidx.cardview.widget.CardView
			android:id="@+id/cardview"
			android:layout_width="300dp"
			android:layout_height="300dp"
			android:background="@android:color/transparent"
			android:foreground="?android:attr/selectableItemBackground"
			android:clickable="true">
			<LinearLayout
				android:id="@+id/image_holder"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:gravity="center_horizontal|center_vertical"
				android:orientation="vertical">
				<ImageView
					android:id="@+id/image"
					android:focusable="false"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:src="@drawable/default_image"
					android:scaleType="centerCrop" />
			</LinearLayout>
		</androidx.cardview.widget.CardView>
	</LinearLayout>
</LinearLayout>
